<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="80sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:stretchColumns="*">

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:id="@+id/btnAC" style="@style/CalcButtonRound.Function" android:text="AC" />
            <Button android:id="@+id/btnPlusMinus" style="@style/CalcButtonRound.Function" android:text="+/-" />
            <Button android:id="@+id/btnPercent" style="@style/CalcButtonRound.Function" android:text="%" />
            <Button android:id="@+id/btnDivide" style="@style/CalcButtonRound.Operator" android:text="รท" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:id="@+id/btn7" style="@style/CalcButtonRound.Number" android:text="7" />
            <Button android:id="@+id/btn8" style="@style/CalcButtonRound.Number" android:text="8" />
            <Button android:id="@+id/btn9" style="@style/CalcButtonRound.Number" android:text="9" />
            <Button android:id="@+id/btnMultiply" style="@style/CalcButtonRound.Operator" android:text="ร" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:id="@+id/btn4" style="@style/CalcButtonRound.Number" android:text="4" />
            <Button android:id="@+id/btn5" style="@style/CalcButtonRound.Number" android:text="5" />
            <Button android:id="@+id/btn6" style="@style/CalcButtonRound.Number" android:text="6" />
            <Button android:id="@+id/btnMinus" style="@style/CalcButtonRound.Operator" android:text="-" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:id="@+id/btn1" style="@style/CalcButtonRound.Number" android:text="1" />
            <Button android:id="@+id/btn2" style="@style/CalcButtonRound.Number" android:text="2" />
            <Button android:id="@+id/btn3" style="@style/CalcButtonRound.Number" android:text="3" />
            <Button android:id="@+id/btnPlus" style="@style/CalcButtonRound.Operator" android:text="+" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button
                android:id="@+id/btn0"
                style="@style/CalcButtonRound.Number"
                android:layout_span="2"
                android:text="0" />
            <Button android:id="@+id/btnDot" style="@style/CalcButtonRound.Number" android:text="." />
            <Button android:id="@+id/btnEquals" style="@style/CalcButtonRound.Operator" android:text="=" />
        </TableRow>

    </TableLayout>

</LinearLayout>
