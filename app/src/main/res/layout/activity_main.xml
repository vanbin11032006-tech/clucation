<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515151"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top decorative bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="12dp"
        android:gravity="center_vertical"
        android:background="#515151"
        android:orientation="horizontal">
        <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/circle_red" android:layout_marginEnd="8dp"/>
        <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/circle_yellow" android:layout_marginEnd="8dp"/>
        <View android:layout_width="12dp" android:layout_height="12dp" android:background="@drawable/circle_green"/>
    </LinearLayout>

    <!-- Display occupies 1/3 of the remaining space -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:padding="20dp"
        android:text="0"
        android:background="#515151"
        android:textColor="@color/white"
        android:textSize="80sp" />

    <!-- Keyboard occupies 2/3 of the remaining space -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#3A3A3A"
        android:stretchColumns="*">

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/btnAC"
                style="@style/CalcButton.Function"
                android:layout_marginEnd="1dp"
                android:text="AC" />

            <Button android:id="@+id/btnPlusMinus" style="@style/CalcButton.Function" android:text="+/-" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnPercent" style="@style/CalcButton.Function" android:text="%" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnDivide" style="@style/CalcButton.Operator" android:text="รท" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginBottom="1dp">
            <Button android:id="@+id/btn7" style="@style/CalcButton.Number" android:text="7" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btn8" style="@style/CalcButton.Number" android:text="8" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btn9" style="@style/CalcButton.Number" android:text="9" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnMultiply" style="@style/CalcButton.Operator" android:text="ร" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginBottom="1dp">
            <Button android:id="@+id/btn4" style="@style/CalcButton.Number" android:text="4" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btn5" style="@style/CalcButton.Number" android:text="5" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btn6" style="@style/CalcButton.Number" android:text="6" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnMinus" style="@style/CalcButton.Operator" android:text="-" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginBottom="1dp">
            <Button android:id="@+id/btn1" style="@style/CalcButton.Number" android:text="1" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btn2" style="@style/CalcButton.Number" android:text="2" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btn3" style="@style/CalcButton.Number" android:text="3" android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnPlus" style="@style/CalcButton.Operator" android:text="+" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button
                android:id="@+id/btn0"
                style="@style/CalcButton.Number"
                android:layout_span="2"
                android:text="0"
                android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnDot" style="@style/CalcButton.Number" android:text="." android:layout_marginEnd="1dp"/>
            <Button android:id="@+id/btnEquals" style="@style/CalcButton.Operator" android:text="=" />
        </TableRow>

    </TableLayout>

</LinearLayout>
